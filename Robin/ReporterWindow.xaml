<Window x:Class="Robin.ReporterWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Robin"
		mc:Ignorable="d"
		Title="Reporter"
		Height="300"
		Width="300"
		Style="{StaticResource WindowStyle1}">
	<Grid>
		<Border Style="{StaticResource CellStyle}">
			<ListBox ItemsSource="{Binding Path=(local:Reporter.Messages)}"
					 BorderBrush="Transparent">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Style="{StaticResource Normal}" FontSize="15" >
							<TextBlock.Text>
								<MultiBinding StringFormat="{}{0}     {1}">
									<Binding Path="TimeStamp" />
									<Binding Path="Msg"
											 TargetNullValue="-"
											 FallbackValue="-" />
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>

	</Grid>
</Window>
